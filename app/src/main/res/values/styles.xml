<resources>

    <style name="AppBaseTheme.NoTransparent" parent="AppBaseTheme" >
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppBaseTheme.Overlay" parent="AppBaseTheme" >
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/AppBaseTheme.WindowAnimation</item>
        <!--remove action bar shadow-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_dark</item>
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <!--<item name="android:actionOverflowButtonStyle">@style/AppBaseTheme.OverFlow</item>-->
    </style>

    <style name="AppBaseTheme.WindowAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/pull_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/pull_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="DeterminateLinearProgressDrawableStyle" parent="Material.Drawable.LinearProgress.Determinate">
        <item name="lpd_strokeColor">@android:color/holo_blue_dark</item>
        <item name="lpd_strokeSecondaryColor">@android:color/holo_blue_bright</item>
        <item name="lpd_verticalAlign">top</item>
    </style>

    <!--<style name="AppBaseTheme.OverFlow">-->
    <!--<item name="android:src">@drawable/icon25</item>-->
    <!--</style>-->

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="TabBarStyle" parent="@style/Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>