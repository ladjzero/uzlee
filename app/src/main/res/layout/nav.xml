<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow_primary"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/nav_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:clickable="true"
        android:paddingBottom="60dp"
        android:paddingTop="24dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            app:border_color="@android:color/white"
            app:border_width="1dp"/>

        <TextView
            android:id="@+id/nav_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nav_user_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_user">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="onMessageClick"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="24sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="{md-notifications}"
                    android:textColor="@color/dark_primary"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="消息"
                    android:textColor="@color/dark_primary"
                    android:textSize="18sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="onMyPostsClick"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="24sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="{md-mode-comment}"
                    android:textColor="@color/dark_primary"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="我的主题"
                    android:textColor="@color/dark_primary"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="onSearchClick"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="24sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="{md-search}"
                    android:textColor="@color/dark_primary"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="搜索"
                    android:textColor="@color/dark_primary"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="onSettingsClick"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="24sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="{md-settings}"
                    android:textColor="@color/dark_primary"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="@color/dark_primary"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="onInfoClick"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="24sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="{md-info}"
                    android:textColor="@color/dark_primary"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="信息"
                    android:textColor="@color/dark_primary"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:onClick="onExitClick"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="24sp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="{md-exit-to-app}"
            android:textColor="@color/dark_primary"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="登出"
            android:textColor="@color/dark_primary"
            android:textSize="18sp"/>

    </LinearLayout>

</RelativeLayout>