<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/tabsContainer"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:background="?attr/colorPrimary">

        <com.rey.material.widget.TabPageIndicator
            android:id="@+id/tabs"
            style="@style/Material.Widget.TabPageIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?attr/tabBarStyle"
            app:tpi_indicatorColor="?attr/colorSecondary"
            app:tpi_indicatorHeight="2dp"
            app:tpi_mode="scroll"
            app:tpi_tabPadding="12dp"/>

    </FrameLayout>
</RelativeLayout>