    android:layout_height="wrap_content"
    android:background="@color/backgroud"
    android:orientation="vertical"
    android:layout_margin="7dp"
    android:padding="8dp"
    android:id="@+id/post_quote" >

    <include layout="@layout/quote_user" />

    <TextView
