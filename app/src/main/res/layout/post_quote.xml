        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="8"
        android:text="quote text quote text quote text quote text quote text quote text quote text quote text quote text quote text quote text quote text"
        android:textColor="@color/smallFont"
        android:textSize="14sp" />

</LinearLayout>