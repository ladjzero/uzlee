<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				xmlns:flatui="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				tools:context="com.ladjzero.uzlee.UserActivity">


	<ImageView
		android:id="@+id/user_info_img"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:src="@color/blossom_light"/>



	<LinearLayout
		android:id="@+id/_user_linearlayout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="false"
		android:orientation="horizontal"
		android:layout_alignParentBottom="true">

		<com.cengalabs.flatui.views.FlatButton
			android:id="@+id/user_btn_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="4dp"
			android:layout_weight="1"
			android:text="浏览TA的主题"
			android:textSize="16sp"
			flatui:fl_theme="@array/snow"/>

		<com.cengalabs.flatui.views.FlatButton
			android:id="@+id/user_btn_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_weight="1"
			android:text="屏蔽TA的发言"
			android:textSize="16sp"
			flatui:fl_theme="@array/blood"/>
	</LinearLayout>

	<!--<ListView-->
		<!--android:id="@+id/user_info_list"-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_alignParentLeft="true"-->
		<!--android:layout_below="@+id/user_info_img"-->
		<!--android:layout_marginTop="14dp"-->
		<!--android:layout_marginBottom="14dp"-->
		<!--android:dividerHeight="0dp"-->
		<!--android:layout_above="@+id/_user_linearlayout"/>-->

	<TextView
		android:id="@+id/user_info_list"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/user_info_img"
		android:layout_marginTop="14dp"
		android:text="NO DATA"
		android:layout_marginBottom="14dp"
		android:layout_above="@+id/_user_linearlayout"
		android:gravity="center"
		android:textStyle="italic"
		android:background="@color/snow_primary"
		android:textColor="@color/snow_darker"/>

</RelativeLayout>
