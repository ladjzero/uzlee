<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:flatui="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				tools:context="com.ladjzero.uzlee.UserActivity">


	<ImageView
		android:id="@+id/user_info_img"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:src="@color/blossom_light"/>

	<ListView
		android:id="@+id/user_info_list"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/user_info_img"
		android:layout_marginTop="14dp"
		android:layout_marginBottom="20dp"
		android:dividerHeight="0dp"/>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/user_info_list"
		android:orientation="horizontal">

		<com.cengalabs.flatui.views.FlatButton
			android:id="@+id/user_btn_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="4dp"
			android:layout_weight="1"
			android:text="浏览TA的主题"
			flatui:fl_theme="@array/dark"
			android:textSize="16sp"/>

		<com.cengalabs.flatui.views.FlatButton
			android:id="@+id/user_btn_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_weight="1"
			android:text="屏蔽TA的发言"
			flatui:fl_theme="@array/blood"
			android:textSize="16sp"/>
	</LinearLayout>

</RelativeLayout>
