<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.rey.material.widget.TabPageIndicator
        android:id="@+id/tabs"
        style="@style/Material.Widget.TabPageIndicator"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:textAppearance="@style/TabBarStyle"
        app:tpi_indicatorColor="@android:color/white"
        app:tpi_indicatorHeight="2dp"
        app:tpi_mode="fixed"
        app:tpi_tabPadding="2dp"
        />
</RelativeLayout>
