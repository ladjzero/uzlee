<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/view_as_visitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:text="游客访问"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:fl_cornerRadius="3dp"
            app:fl_theme="@array/grape"
            app:fl_touchEffect="fl_ripple"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="用户名"
            android:inputType="text"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/grape_primary"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="密码"
            android:inputType="textPassword"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/grape_primary"/>

        <Spinner
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/questions"
            android:hint="验证问题"
            android:spinnerMode="dialog"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="验证答案"
            android:visibility="gone"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/dark_primary"/>

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:text="登入"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:fl_cornerRadius="3dp"
            app:fl_theme="@array/grape"
            app:fl_touchEffect="fl_ripple"/>

    </LinearLayout>
</LinearLayout>