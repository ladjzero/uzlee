<manifest
    package="com.ladjzero.uzlee"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="6"
    android:versionName="0.4">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name="MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppBaseTheme.NoTransparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".PostsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="">
            <!--<intent-filter android:label="分享到  hi-pda">-->
            <!--<action android:name="android.intent.action.SEND"/>-->

            <!--<category android:name="android.intent.category.DEFAULT"/>-->

            <!--<data android:mimeType="image/*"/>-->
            <!--</intent-filter>-->
        </activity>
        <activity
            android:name=".EditActivity"
            android:label="@string/title_activity_reply"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".MyPostsActivity"
            android:label="@string/title_activity_my_posts">
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="">
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="设置">
        </activity>
        <activity
            android:name=".AlertActivity"
            android:label="消息">
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="个人信息">
        </activity>
        <activity
            android:name=".ThreadsActivity"
            android:label="@string/title_activity_threads">
        </activity>
        <activity
            android:name=".ImageActivity"
            android:label="图片">
        </activity>
        <activity
            android:name=".ChatActivity"
            android:label="聊天"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>